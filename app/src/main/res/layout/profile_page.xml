<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBF4AD"
    android:layoutMode="opticalBounds"
    tools:context=".Profile">

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="114dp"
        android:layout_height="62dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button4"
        android:src="@drawable/return_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/return_settings" />

    <LinearLayout
        android:layout_width="332dp"
        android:layout_height="596dp"
        android:background="@drawable/button3_borders"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552">

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="92dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:background="@drawable/profile_button"
                app:srcCompat="@drawable/profile_round" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="131dp"
                android:layout_height="74dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Данные профиля"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="192dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Почта"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textPassword"
                android:layout_width="192dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Пароль"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:visibility="visible" />


        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveChangesButton"
            android:layout_width="130dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="53dp"
            android:background="@drawable/reg_button"
            android:text="Сохранить изменения"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>